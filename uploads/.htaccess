# Block PHP execution inside uploads (Windows-safe)
<FilesMatch "\.(php|php[0-9]|phtml|phar)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order Allow,Deny
    Deny from all
  </IfModule>
</FilesMatch>

# (Optional) allow only safe extensions
<FilesMatch "\.(jpg|jpeg|png|gif|webp|pdf|docx|xlsx|pptx|txt)$">
  <IfModule mod_authz_core.c>
    Require all granted
  </IfModule>
  <IfModule !mod_authz_core.c>
    Allow from all
  </IfModule>
</FilesMatch>
