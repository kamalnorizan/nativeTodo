<FilesMatch "\.(htaccess|htpasswd|env|ini|phps|fla|psd|log|sh|bak)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Laravel-style routing: all requests except real files/directories go to index.php
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  # If the request is for a real file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  # Otherwise, route to index.php (single entry point)
  RewriteRule ^ index.php [L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect against XSS, clickjacking, and MIME sniffing
<IfModule mod_headers.c>
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Content-Type-Options "nosniff"
</IfModule>

# Set default charset
AddDefaultCharset UTF-8

# Disable server signature
ServerSignature Off

# Redirect all HTTP to HTTPS (uncomment if SSL is enabled)
#<IfModule mod_rewrite.c>
#  RewriteEngine On
#  RewriteCond %{HTTPS} off
#  RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
